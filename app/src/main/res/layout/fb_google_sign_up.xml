<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Vedant !! We are almost ready.."
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/cardLeftRightBottonMargin"
        android:layout_marginEnd="@dimen/cardLeftRightBottonMargin"
        android:layout_marginTop="24dp"
        android:layout_margin="@dimen/cardLeftRightBottonMargin"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:drawableEnd="@drawable/pull_up"
        android:drawablePadding="@dimen/normal_padding"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_address"
            android:hint="Mobile Number"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_text_rounded_border"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:textSize="14sp"
            />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter password for Bornbhukkad"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/cardLeftRightBottonMargin"
        android:layout_marginEnd="@dimen/cardLeftRightBottonMargin"
        android:layout_marginTop="8dp"
        android:layout_margin="@dimen/cardLeftRightBottonMargin"
        android:paddingBottom="4dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_address"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_rounded_border"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:textSize="14sp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/re_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_address"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_rounded_border"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:textSize="14sp"/>
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/proceed"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:textStyle="italic"
            android:background="@drawable/normal_button"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
</LinearLayout>