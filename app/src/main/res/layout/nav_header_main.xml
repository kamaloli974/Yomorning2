<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_marginTop="24dp">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:background="#F5F5F5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:textAlignment="viewStart"
                    android:layout_weight="0.5"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:layout_marginBottom="0dp"
                    android:layout_marginStart="@dimen/normal_margin"
                    android:paddingStart="@dimen/normal_padding"
                    android:paddingEnd="@dimen/normal_padding"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/sign_out"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="SIGN OUT"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="0.5"
                    android:layout_margin="@dimen/normal_margin"
                    android:paddingStart="@dimen/normal_padding"
                    android:paddingEnd="@dimen/normal_padding"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.20"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:paddingStart="10dp"
                    android:layout_marginTop="8dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="18dp"
                    android:layout_gravity="center"
                    android:background="@drawable/profile_dp_round"
                    android:textColor="@color/colorWhite"
                    android:text="J"
                    android:id="@+id/name_first_letter"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.80"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/profile_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="@dimen/left_right_top_card_padding"
                        android:paddingStart="4dp"
                        android:paddingEnd="@dimen/cardLeftRightBottonMargin"
                        android:layout_marginTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="kamaleinsknash@gmail.com"
                        android:layout_marginStart="@dimen/left_right_top_card_padding"
                        android:paddingStart="4dp"
                        android:paddingEnd="@dimen/cardLeftRightBottonMargin"
                        android:paddingBottom="4dp"
                        android:paddingTop="4dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:id="@+id/profile_email"/>
                    <TextView
                        android:id="@+id/profile_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+91 8459687458"
                        android:layout_marginStart="@dimen/left_right_top_card_padding"
                        android:paddingStart="4dp"
                        android:paddingEnd="@dimen/cardLeftRightBottonMargin"
                        android:paddingBottom="@dimen/cardLeftRightBottonMargin"
                        android:paddingTop="4dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textAlignment="center"
                        android:textStyle="italic"
                        android:layout_marginStart="@dimen/left_right_top_card_padding"
                        android:paddingStart="4dp"
                        android:paddingEnd="@dimen/cardLeftRightBottonMargin"
                        android:paddingBottom="@dimen/cardLeftRightBottonMargin"
                        android:paddingTop="4dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>
