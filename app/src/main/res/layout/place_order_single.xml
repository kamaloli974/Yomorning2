<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="@dimen/normal_padding"
    android:layout_margin="@dimen/normal_margin"
    android:padding="@dimen/normal_padding"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Delivery date and Time:"
                android:textColor="@color/colorAccent"
                android:textAlignment="viewStart"
                android:padding="@dimen/normal_padding"
                android:textSize="12sp" />
            <TextView
                android:textColor="@color/colorAccent"
                android:id="@+id/delivery_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2017-12-02 ,22:43:60"
                android:textAlignment="viewEnd"
                android:textStyle="bold"
                android:textSize="12sp"
                android:padding="@dimen/normal_padding"/>
        </LinearLayout>
        <TextView
            android:id="@+id/food_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="Chinease noodles with Italian Souce/American hot dogs/Gma"
            android:layout_marginTop="@dimen/normal_margin"
            android:padding="@dimen/normal_padding"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="Total Price:"
                android:padding="@dimen/normal_padding"/>
            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textStyle="bold"
                android:text="Rs.1020"
                android:padding="@dimen/normal_padding"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="Ordered Time :"
                android:textStyle="bold"
                android:padding="@dimen/normal_padding"/>
            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="2017-09-01 , 22:12:45"
                android:textStyle="bold"
                android:padding="@dimen/normal_padding"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
