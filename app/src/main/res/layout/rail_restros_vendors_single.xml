<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:padding="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp">
        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_weight="0.37"
                android:layout_height="match_parent"
                android:src="@drawable/railrestro_vendor" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/normal_margin"
                android:padding="@dimen/normal_padding">
                <TextView
                    android:id="@+id/vendors_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yomorning Hyderabad"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/colorAccent"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/vendors_name"
                    android:layout_margin="5dp"
                    android:text="Minimum Order :"
                    android:padding="@dimen/normal_margin"
                    android:background="@drawable/one_sided_border"
                    />

                <TextView
                    android:id="@+id/value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/vendors_name"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Rs. 153" />

                <TextView
                    android:id="@+id/delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/amount"
                    android:layout_margin="5dp"
                    android:text="Delivery Time :" />

                <TextView
                    android:id="@+id/delivery_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/value"

                    android:layout_margin="5dp"
                    android:text="60 min" />

                <TextView
                    android:id="@+id/opening_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/delivery_time"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Opening Time :" />

                <TextView
                    android:id="@+id/opening_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/delivery_time"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="10:00" />

                <TextView
                    android:id="@+id/closing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/opening_time"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Closing Time:" />

                <TextView
                    android:id="@+id/closing_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/opening_time"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="23:00" />
                <TextView
                    android:id="@+id/food_types"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/closing_time"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Food :" />

                <TextView
                    android:id="@+id/food_types_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/closing_time"
                    android:layout_margin="5dp"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="viewEnd"
                    android:text="Veg &amp; Non-Veg" />
                <TextView
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/food_types"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="Contact :" />

                <TextView
                    android:id="@+id/contact_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/food_types"
                    android:layout_margin="5dp"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="viewEnd"
                    android:text="8186045469" />
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/select_vendor"
            android:layout_below="@id/container"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:text="Order Now"
            android:padding="2dp"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>